<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_back_item">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="2"
        app:layout_constraintBottom_toTopOf="@+id/bottom_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <FrameLayout
                android:id="@+id/fl_local_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_10dp"
                android:paddingRight="@dimen/padding_10dp"
                android:paddingTop="@dimen/padding_5dp"
                android:paddingBottom="@dimen/padding_5dp"
                android:layout_margin="@dimen/margin_10dp"
                android:background="@drawable/video_view_user_id_bg">

                <TextView
                    android:id="@+id/tv_local_id"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/test_size_12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_below="@+id/tv_local_id"
                    android:id="@+id/tv_local_prebitrate"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/test_size_12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_below="@+id/tv_local_prebitrate"
                    android:id="@+id/tv_local_up_link"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/test_size_12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <FrameLayout
                android:id="@+id/fl_remote_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:id="@+id/fl_remote_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_10dp"
                android:paddingRight="@dimen/padding_10dp"
                android:paddingTop="@dimen/padding_5dp"
                android:paddingBottom="@dimen/padding_5dp"
                android:layout_margin="@dimen/margin_10dp"
                android:background="@drawable/video_view_user_id_bg">

                <TextView
                    android:id="@+id/tv_remote_id"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/test_size_12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_below="@+id/tv_remote_id"
                    android:id="@+id/tv_remote_prebitrate"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/test_size_12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_below="@+id/tv_remote_prebitrate"
                    android:id="@+id/tv_remote_bitrate"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/test_size_12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/video_bottom_menu_bg"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="频道号:"
            android:textColor="@color/color_text_tab_unselected" />

        <ImageView
            android:id="@+id/exit_button"
            android:layout_width="@dimen/item_width_20dp"
            android:layout_height="@dimen/item_height_20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/exit_channel_icon"
            android:padding="@dimen/padding_10dp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>